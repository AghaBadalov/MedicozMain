@using Medicoz.Helpers
@model Appointment

@section Js{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.1/sweetalert2.min.css" integrity="sha512-NvuRGlPf6cHpxQqBGnPe7fPoACpyrjhlSNeXVUY7BZAj1nNhuNpRBq3osC4yr2vswUEuHq2HtCsY2vfLNCndYA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
    <div class="col-sm-12 col-xl-12">
        <div class="bg-light rounded h-100 p-8">
            <a asp-action="create" asp-controller="termsandconditions" class="btn btn-outline-primary m-2">Create</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Doctor Name</th
                        <th scope="col">Appointment Time</th>
                        <th scope="col">Date Time</th>
                        <th scope="col">Status</th>
                        <th scope="col">Message</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>

                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                
                    
                    <tr>
                        
                        <td>@Model.Id</td>
                        <td>@Model.Doctor.Name</td>
                        <td>@Model.AppointmentTime</td>
                        <td>@Model.StartTime @Model.StartDate.ToString("d")</td>
                        
                        <td>@Model.Status</td>
                        <td>@Model.Message</td>
                        <td>@Model.Email</td>
                        <td>@Model.Phone</td>
                        
                        
                        

                        

                        <td>
                            @if(Model.Status!=Medicoz.Enums.Status.Accepted){
                                <a asp-action="reject" asp-controller="appointment" asp-route-id="@Model.Id" class="btn btn-outline-danger m-2 delete-button">Reject</a>
                            <a asp-action="accept" asp-controller="appointment" asp-route-id="@Model.Id" class="btn btn-outline-success m-2">Accept</a>
                            }
                            <a asp-action="index" asp-controller="appointment" asp-route-id="@Model.Id" class="btn btn-outline-warning m-2">Back</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
   
@section Script{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.1/sweetalert2.min.js" integrity="sha512-vCI1Ba/Ob39YYPiWruLs4uHSA3QzxgHBcJNfFMRMJr832nT/2FBrwmMGQMwlD6Z/rAIIwZFX8vJJWDj7odXMaw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}


