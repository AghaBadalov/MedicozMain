<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>MEDICOZ - Admin Panel</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/manage/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fontawesome-free@6.2.1/css/fontawesome.min.css" integrity="sha384-QYIZto+st3yW+o8+5OHfT6S482Zsvz2WfOzpFSXMF9zqeLcFV0/wlZpMtyFcZALm" crossorigin="anonymous">

    <!-- Libraries Stylesheet -->
    <link href="~/manage/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/manage/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    @RenderSection("Js",required:false)
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/manage/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/manage/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a asp-action="index" asp-controller="dashboard" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>Medicoz Admin </h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="ms-3">
                    <div class="position-relative">
                        <img class="rounded-circle" src="~/manage/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                       
                            @if(User.Identity.IsAuthenticated){
                            <h6 class="mb-0">@User.Identity.Name</h6>
                            }

                        
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a asp-action="index" asp-controller="dashboard" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Pages</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-action="index" asp-controller="slider" class="dropdown-item">Sliders</a>
                            <a asp-action="index" asp-controller="feature" class="dropdown-item">Feature</a>
                            <a asp-action="index" asp-controller="service" class="dropdown-item">Services</a>
                            <a asp-action="index" asp-controller="ad" class="dropdown-item">Ads</a>
                            <a asp-action="index" asp-controller="plancategory" class="dropdown-item">Plan's Category</a>
                            <a asp-action="index" asp-controller="plan" class="dropdown-item">Plans</a>
                            <a asp-action="index" asp-controller="termsandconditions" class="dropdown-item">Terms and Conditions</a>
                            <a asp-action="index" asp-controller="doctor" class="dropdown-item">Doctors</a>
                            <a asp-action="index" asp-controller="department" class="dropdown-item">Departments</a>
                            <a asp-action="index" asp-controller="about" class="dropdown-item">About</a>
                            <a asp-action="index" asp-controller="testimonial" class="dropdown-item">Testimonials</a>
                            <a asp-action="index" asp-controller="blogpost" class="dropdown-item">Blog Posts</a>
                            <a asp-action="index" asp-controller="blogpost" class="dropdown-item">Blog Posts</a>
                            
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Recycle Bin</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-action="deletedsliders" asp-controller="slider" class="dropdown-item">Deleted Sliders</a>
                            <a asp-action="deletedfeature" asp-controller="feature" class="dropdown-item">Deleted Features</a>
                            <a asp-action="deletedfeature" asp-controller="service" class="dropdown-item">Deleted Services</a>
                            <a asp-action="deletedad" asp-controller="ad" class="dropdown-item">Deleted Ads</a>
                            
                            <a asp-action="deletedplans" asp-controller="plan" class="dropdown-item">Deleted Plans</a>
                            <a asp-action="deleteddoctors" asp-controller="doctor" class="dropdown-item">Deleted Doctors</a>
                            <a asp-action="deletedterms" asp-controller="termsandconditions" class="dropdown-item">Deleted Terms</a>
                            <a asp-action="DeletedTestimonials" asp-controller="testimonial" class="dropdown-item">Deleted Testimonials</a>
                            
                        </div>
                    </div>
                    <a asp-action="index" asp-controller="Appointment" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Appointments</a>
                    <a asp-action="accepted" asp-controller="Appointment" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Accepted Appointments</a>
                    <a asp-action="index" asp-controller="setting" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Settings</a>
                    <a asp-action="index" asp-controller="product" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Products</a>
                    
                    
                    
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
                <a href="#" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <form class="d-none d-md-flex ms-4">
                    <input class="form-control border-0" type="search" placeholder="Search">
                </form>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fa fa-bell me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex">Notificatin</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            
                            
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <img class="rounded-circle me-lg-2" src="~/manage/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                            <span class="d-none d-lg-inline-flex">@User.Identity.Name</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            
                            <a asp-action="logout" asp-controller="account"  class="dropdown-item">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->
            @RenderBody()
            

            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">Medicoz</a>, All Right Reserved.
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                            Designed By <a href="https://github.com/AghaBadalov">Agha</a>
                            </br>
                            
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/manage/lib/chart/chart.min.js"></script>
    <script src="~/manage/lib/easing/easing.min.js"></script>
    <script src="~/manage/lib/waypoints/waypoints.min.js"></script>
    <script src="~/manage/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/manage/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/manage/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/manage/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/manage/js/main.js"></script>
    <script src="~/manage/js/mainfetch.js"></script>
    @RenderSection("Script",required:false)
</body>

</html>