@using Medicoz.Enums

@{
    ViewData["Title"] = "Update";
}


@{
    ViewData["Title"] = "Create";
}

@model Plan

<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">

        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>
            <div class="mb-3">

                <select asp-for="Planperiod" asp-items="@Html.GetEnumSelectList<Period>()"></select>


            </div>
            <div class="mb-3">
                <select asp-for="PlanCategoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))"></select>
                <span asp-validation-for="PlanCategory" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Feature1" class="form-label">Feature1</label>
                <input asp-for="Feature1" class="form-control">
                <span asp-validation-for="Feature1" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Feature2" class="form-label">Feature2</label>
                <input asp-for="Feature2" class="form-control">
                <span asp-validation-for="Feature2" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Feature3" class="form-label">Feature3</label>
                <input asp-for="Feature3" class="form-control">
                <span asp-validation-for="Feature3" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Feature4" class="form-label">Feature4</label>
                <input asp-for="Feature4" class="form-control">
                <span asp-validation-for="Feature4" class="text-danger"></span>

            </div>
            
            <button type="submit" class="btn btn-primary" class="text-danger">Update</button>
        </form>
    </div>
</div>



