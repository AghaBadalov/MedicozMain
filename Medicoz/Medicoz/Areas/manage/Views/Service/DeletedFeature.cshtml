
@{
    ViewData["Title"] = "DeletedFeature";
}



@model List<Service>
@{
    int counter = 0;
}

@section Js{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.1/sweetalert2.min.css" integrity="sha512-NvuRGlPf6cHpxQqBGnPe7fPoACpyrjhlSNeXVUY7BZAj1nNhuNpRBq3osC4yr2vswUEuHq2HtCsY2vfLNCndYA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-8">
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Tittle</th>
                    <th scope="col">Desc</th>
                    <th scope="col">Icon</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Service service in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@service.Id</td>
                        <td>@service.Tittle</td>
                        <td>@service.Desc</td>
                        <td><div style="background-color:white;max-width:100px">@Html.Raw(service.Icon)</div></td>


                        <td>
                            <a asp-action="delete" asp-controller="service" asp-route-id="@service.Id" class="btn btn-outline-danger m-2 delete-button">Delete</a>
                            <a asp-action="repair" asp-controller="service" asp-route-id="@service.Id" class="btn btn-outline-warning m-2">Repair</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
@section Script{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.1/sweetalert2.min.js" integrity="sha512-vCI1Ba/Ob39YYPiWruLs4uHSA3QzxgHBcJNfFMRMJr832nT/2FBrwmMGQMwlD6Z/rAIIwZFX8vJJWDj7odXMaw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}