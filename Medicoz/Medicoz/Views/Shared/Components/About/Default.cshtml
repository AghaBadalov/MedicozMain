@model List<About>
<!-- About Section -->
@foreach (var item in Model)
{
    <section class="about-section">
        <div class="auto-container">
            <div class="row">
                <!-- Content Column -->
                <div class="content-column col-lg-6 col-md-12 col-sm-12 order-2">
                    <div class="inner-column">
                        <div class="sec-title">
                            <span class="sub-title">OUR MEDICAL</span>
                            <h2>@item.Tittle</h2>
                            <span class="divider"></span>
                            <p> @item.Desc</p>

                        </div>
                        <div class="link-box">

                            <a asp-action="index" asp-controller="about" class="theme-btn btn-style-one"><span class="btn-title">More About</span></a>
                        </div>
                    </div>
                </div>

                <!-- Images Column -->
                <div class="images-column col-lg-6 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <div class="video-link">
                            <a href="@item.VideoUrl" class="play-btn lightbox-image" data-fancybox="images"><span class="flaticon-play-button-1"></span></a>
                        </div>
                        <figure class="image-1"><img src="~/uploads/abouts/@item.BigImageUrl" alt=""></figure>
                        <figure class="image-2"><img src="~/uploads/abouts/@item.MiddleImageUrl" alt=""></figure>
                        <figure class="image-3">
                            <span class="hex"></span>
                            <img src="~/uploads/abouts/@item.SmallImageUrl" alt="">
                        </figure>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<!-- End About Section -->